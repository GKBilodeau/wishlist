<h1>Add an item:</h1>
<%= form_tag '/lists/item', method: :post do %>
  <div class="form-group">
    <%= label_tag :item_name %>
    <%= text_field_tag :item_name, nil, class: "form-control", placeholder: "Enter item name" %>
  </div>
  <div class="form-group">
    <%= label_tag :item_description, "Item description", :style => "vertical-align: top;" %>
   <%= text_field_tag :item_description, nil, class: "form-control", placeholder: "Description (color, size, any notes)" %>
  </div>
  <div class="form-group">
    <%= label_tag :where_to_find %>
    <%= text_field_tag :where_to_find, nil, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :multiple_purchases, "Are Multiple Purchases OK?" %>
    <%= check_box_tag :multiple_purchases %>
  </div>
  <div>
    <%= hidden_field_tag "listname", params[:name] %>
    <%= submit_tag "Add" %>
  </div>
<% end %>

<a href="/lists/index">Back to my dashboard</a>